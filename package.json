{
  "name": "delightplus-ui",
  "version": "0.1.14",
  "description": "Custom reusable React UI components by DeLightPlus",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./icons": {
      "import": "./dist/icons/index.js",
      "require": "./dist/icons/index.js"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js"
    },
    "./sections": {
      "import": "./dist/components/sections/index.js",
      "require": "./dist/components/sections/index.js"
    },
    "./pages": {
      "import": "./dist/pages/index.js",
      "require": "./dist/pages/index.js"
    }
  },
  "files": [
    "dist",
    "styles"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsup --config tsup.config.ts && npm run build:css",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./dist/styles.css",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release": "npm run version:patch && npm run build && npm publish"
  },
  "keywords": [
    "react",
    "component",
    "ui",
    "icons",
    "delightplus"
  ],
  "author": "Kabelo Peter Matlakala",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "peerDependencies": {
    "clsx": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@tanstack/react-query": "^5.81.5",
    "clsx": "^2.1.0",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.59.0",
    "recharts": "^3.0.2",
    "tailwind-merge": "^3.3.1",
    "wouter": "^3.7.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3"
  }
}
